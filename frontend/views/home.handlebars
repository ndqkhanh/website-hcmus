<div class='containter'>
  <header>
    <div class='container d-flex flex-wrap justify-content-center py-3'>
      <a
        href='/'
        class='d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none'
      >
        <span class='fs-2'>Vexere</span>
      </a>

      <div class='dropdown d-flex align-items-center'>
        <button
          type='button'
          class='btn btn-primary'
          data-bs-toggle='modal'
          data-bs-target='#exampleModal'
        >
          Login
        </button>
      </div>
    </div>
  </header>
  <!--BAO DID THIS NO NEED TO DO-->
  <div
    class='bg-image position-relative'
    style="
          background: url('https://images.pexels.com/photos/842711/pexels-photo-842711.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2');
          background-size: cover;
          background-repeat: no-repeat;
          height: 90vh;
        "
  >
    <main class='w-100 position-absolute top-50 start-50 translate-middle'>
      <h1
        class='display-1 text-center py-3 text-primary'
        style='text-shadow: rgb(91 89 119) 1px 1px; color: white !important; font-weight: 700; width: 900px; margin: 0 auto; font-size: 60px'
      >
        Reach For The Travel Easier And More Enjoyable
      </h1>
      <div class='card container p-2 w-50'>
        {{> search}}
      </div>
    </main>
  </div>
</div>

<!--Login Modal-->
<div
  class='modal fade'
  id='exampleModal'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div
        class='modal-header d-flex justify-content-center align-items-center text-bg-primary'
      >
        <h1 class='modal-title fs-5' id='exampleModalLabel'>Login</h1>
      </div>
      <div class='modal-body'>
        <form>
          <div class='form-group row py-2'>
            <label
              for='inputEmail'
              class='col-sm-2 col-form-label'
            >Email</label>
            <div class='col-sm-10'>
              <input type='password' class='form-control' id='inputEmail' />
            </div>
          </div>
          <div class='form-group row py-2'>
            <label
              for='inputPassword'
              class='col-sm-2 col-form-label'
            >Password</label>
            <div class='col-sm-10'>
              <input type='password' class='form-control' id='inputPassword' />
            </div>
          </div>
        </form>
      </div>

      <div class='modal-footer d-flex justify-content-center flex-column'>
        <button type='button' class='btn btn-primary'>Done</button>
        <div class='register'>
          <i>Haven't got an account?</i>
          <b data-bs-toggle='modal' data-bs-target='#register'>Register</b>
        </div>
        <div class='restore'>
          <i>Forgot password?</i>
          <b data-bs-toggle='modal' data-bs-target='#restore'>Restore</b>
        </div>
      </div>
    </div>
  </div>
</div>

<!--Register Modal-->
<div
  class='modal fade'
  id='register'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div
        class='modal-header d-flex justify-content-center align-items-center text-bg-primary'
      >
        <h1 class='modal-title fs-5' id='exampleModalLabel'>Register</h1>
      </div>
      <div class='modal-body'>
        <form>
          <div class='form-group row py-2'>
            <label
              for='inputEmailRegister'
              class='col-sm-3 col-form-label'
            >Email</label>
            <div class='col-sm-9'>
              <input
                type='password'
                class='form-control'
                id='inputEmailRegister'
              />
            </div>
          </div>
          <div class='form-group row py-2'>
            <label
              for='inputPasswordRegister'
              class='col-sm-3 col-form-label'
            >Password</label>
            <div class='col-sm-9'>
              <input
                type='password'
                class='form-control'
                id='inputPasswordRegister'
              />
            </div>
          </div>
          <div class='form-group row py-2'>
            <label
              for='inputRePasswordRegister'
              class='col-sm-3 col-form-label'
            >Repassword</label>
            <div class='col-sm-9'>
              <input
                type='password'
                class='form-control'
                id='inputRePasswordRegister'
              />
            </div>
          </div>
        </form>
      </div>
      <div class='modal-footer d-flex justify-content-center flex-column'>
        <button
          type='button'
          class='btn btn-primary'
          data-bs-toggle='modal'
          data-bs-target='#doneRegister'
        >
          Done
        </button>
      </div>
    </div>
  </div>
</div>

<!--Alert when successfully Register Modal-->
<div
  class='modal fade'
  id='doneRegister'
  tabindex='-1'
  aria-labelledby='exampleModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div
        class='modal-header d-flex justify-content-center align-items-center text-bg-primary'
      >
        <h1 class='modal-title fs-5' id='exampleModalLabel'>Alert</h1>
      </div>
      <div class='modal-body text-center'>
        <b> You have succesfully registered an account </b>
      </div>
      <div class='modal-footer d-flex justify-content-center flex-column'>
        <button type='button' class='btn btn-primary'>Done</button>
      </div>
    </div>
  </div>
</div>

<!--Enter email to restore account-->
