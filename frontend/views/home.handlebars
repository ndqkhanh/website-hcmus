    <div class='modal-content'>
      <div
        class='modal-header d-flex justify-content-center align-items-center text-bg-primary'
      >
        <h1 class='modal-title fs-5' id='exampleModalLabel'>
          Restore password
        </h1>
      </div>
      <div class='modal-body'>
        <form>
          <div class='form-group row py-2'>
            <label for='inputEmailRestore' class='col-sm-3 col-form-label'>
              Enter email</label>
            <div class='col-sm-9'>
              <input
                type='password'
                class='form-control'
                id='inputEmailRestore'
              />
            </div>
          </div>
        </form>
      </div>
      <div class='modal-footer d-flex justify-content-center flex-column'>
        <button
          type='button'
          class='btn btn-primary'
          data-bs-toggle='modal'
          data-bs-target='#enterEmail'
        >
          Done
        </button>
      </div>
    </div>
  </div>
</div>
<!--New password restore Modal-->
